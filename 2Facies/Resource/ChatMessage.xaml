<UserControl x:Class="_2Facies.Resource.ChatMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:_2Facies.Resource"
             mc:Ignorable="d" Width="235" Margin="0,2,0,2">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Left" >
            <Border x:Name="ChatBorder"  BorderThickness="1" BorderBrush="{Binding BackColor}" Background="{Binding BackColor}"  CornerRadius="10" HorizontalAlignment="Left">
                <TextBlock x:Name="MessageBlock" TextAlignment="{Binding TextAlign}" Margin="9,6,9,6"  Text="{Binding Message}" FontSize="16" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
    </DockPanel>
</UserControl>
